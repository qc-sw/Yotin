/* pages/record-demo/record.wxss */
/* 背景 */
.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}
.fullbg{
  width:100%;
  height:100%;
  border:none;
}
/* 本页面 */
.full {
  height: 100%;
  padding:7%;
}

.card {
  height: 360px;
  margin-top: 20%;
  border-radius: 10px;
  box-shadow: 0px 0px 8px 6px rgba(0, 0, 0, 0.3);
  overflow: hidden;
}

.normal {
  background: rgba(93, 126, 119, 0.171);
  overflow: hidden;
}

.time {
  position: relative;
  background: rgba(93, 126, 119, 0.171);
  
}

.timeWord {
  position: absolute;
  bottom: 20px;
  left: 33%;
  color: rgba(0, 0, 0, 0.842);
  font-size: 28px;
}

      /* 弹窗动画 */
.zan-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0);
  display: none;
}

.zan-dialog__container {
  position: fixed;
  bottom: 400rpx;
  width: 650rpx;
  height: 350rpx;
  margin-left: 50rpx;
  background: #f8f8f8;
  transform: translateY(300%);
  transition: all 0.4s ease;
  z-index: 12;
  border-radius: 20rpx;
  box-shadow: 0px 3px 3px 2px gainsboro;
}

.zan-dialog--show .zan-dialog__container {
  transform: translateY(0);
}

.zan-dialog--show .zan-dialog__mask {
  display: block;
}