<!--pages/record/record.wxml-->
<view class='container'>
  <button class="btn" type='primary' bindtap='startRecording'>开始录音</button>
  <button class="btn" type='primary' bindtap='pauseRecording'>暂停录音</button>
  <button class="btn" type='primary' bindtap='resumeRecording'>继续录音</button>
  <button class="btn" type='primary' bindtap='stopRecording'>结束录音</button>
  <view>
    <view>时长：{{audioMsg.duration}}</view>
    <view>文件大小：{{audioMsg.fileSize}}</view>
    <view>临时路径：{{audioMsg.tempFilePath}}</view>
  </view>
</view>
