/* pages/record.wxss */

.allpage {
  display: flex;
  flex-direction: column;
  align-content: space-around;
  height: 100%;
}

page {
  height: 100%;
}

.background {
  width: 100%;
  height: 120%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -100;
}

.full {
  margin-top: -5%;
  width: 100%;
  height: 100%;
  border: none;
}

.layout {
  width: 80%;
  margin: 0 auto;
}

.transparent {
  background: whitesmoke;
  margin: 20px;
  color: rgb(36, 35, 35);
  font-size: 14px;
  position: inherit;
  padding: 6px 30px;
  border-radius: 10px;
  padding-bottom: 20px;
}

.head {
  text-align: center;
  margin-bottom: 10px;
  font-size: 18px;
  color: balck;
}

.tab {
  padding-top: 10%;
  display: flex;
}

.box-l {
  width: 0px;
  height: 0px;
  border-top: 20px solid rgb(144, 220, 250);
  border-right: 80px solid rgb(144, 220, 250);
  border-bottom: 20px solid rgb(144, 220, 250);
  border-left: 80px solid rgb(144, 220, 250);
}

.box-r {
  width: 0px;
  height: 0px;
  border-top: 20px solid rgb(144, 220, 250);
  border-right: 20px solid rgba(0, 0, 0, 0);
  border-bottom: 20px solid rgba(0, 0, 0, 0);
  border-left: 20px solid rgb(144, 220, 250);
}

.yotin {
  position: absolute;
  font-size: 28px;
  color: white;
  font-weight: 700;
  font-family: "楷体";
  left: 3%;
}

.bottom {
  width: 100%;
  height: 20%;
  background: white;
  /* margin-top: 20%; */
  display: flex;
}

.code {
  width: 50%;
  height: 50%;
  margin-top: -7%;
}

.us {
  position: absolute;
  left: 9%;
  bottom: 3%;
  font-size: 30rpx;
}

.codeImg {
  width: 75%;
  height: 170%;
}

.contact {
  display: flex;
  flex-direction: column;
}

.tel {
  float: left;
  font-size: 30rpx;
  margin-top: 5%;
  margin-left: -10%;
}

.adress {
  float: right;
  margin-top: 20%;
  font-size: 28rpx;
  font-weight: bold;
  font-family: "楷体";
}
